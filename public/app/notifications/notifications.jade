ul.nav.navbar-nav.navbar-right.bell(ng-controller="NotificationsController" ng-show="user")
	li
		.btn-group
			.dropdown-toggle.notification-icon(type="button", data-toggle="dropdown")
				img.notification-bell(src="https://googledrive.com/host/0B_EenlQcPPQvd0ZhX053UTFpX00/bell.png" ng-hide="notifications.length")
				img.notification-bell(src="https://googledrive.com/host/0B_EenlQcPPQvd0ZhX053UTFpX00/Easter-Bell-icon.png" ng-show="notifications.length")
			ul.notif-box.dropdown-menu(ng-show="notifications.length")
				li(ng-repeat="notification in notifications" ng-click="markAsRead(notification)")
					.notif-container
						.notif-img.col-md-2
							img(ng-src="{{notification.profileImage}}")
						.notif-content.col-md-9
							div {{notification.title}}
							div.notif-time {{notification.created_time | date:'h:mma MM/dd/yyyy'}}