.container
    .row
        .middle-page
            .well(ng-show="stillLoding").text-center
                .progress.progress-striped.active(style="width:300px;margin:0 auto;")
                    .progress-bar(style="width: 100%")
            .container
                .row
                    .well(ng-repeat="page in pages")
                        .row
                            .col-md-1
                                img(ng-src="{{page.profileImage}}" src="")
                            .col-md-8.pull-left
                                h5 {{page.from.name}}
                            .col-md-3